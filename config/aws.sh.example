#!/bin/bash
# AWS Configuration Example
#
# Copy this file to config/aws.sh and customize for your environment.
# Most settings auto-discover - only set what you need to override.

# AWS CLI Configuration
export AWS_REGION=eu-west-1
export AWS_PROFILE=woldeploy

# SSH Key Configuration
export DEFAULT_KEY_NAME=jhw-keypair-mac-m1-2020

# Instance Configuration
# Since we build in CodeBuild now, EC2 only runs the app (no compilation)
# t3.micro is sufficient for most workloads
export DEFAULT_INSTANCE_TYPE=t3.micro

